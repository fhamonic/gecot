{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$defs": {
        "variable": {
            "type": "string"
        },
        "sum": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "sum"
                },
                "terms": {
                    "type": "array",
                    "contains": {
                        "$ref": "#/$defs/term"
                    }
                }
            },
            "required": [
                "terms"
            ]
        },
        "min": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "min"
                },
                "terms": {
                    "type": "array",
                    "contains": {
                        "$ref": "#/$defs/term"
                    }
                }
            },
            "required": [
                "terms"
            ]
        },
        "term": {
            "type": "object",
            "properties": {
                "coef": {
                    "type": "number",
                    "minimum": 0
                },
                "formula": {
                    "oneOf": [
                        {
                            "$ref": "#/$defs/variable"
                        },
                        {
                            "$ref": "#/$defs/sum"
                        },
                        {
                            "$ref": "#/$defs/min"
                        }
                    ]
                }
            },
            "required": [
                "formula"
            ]
        }
    },
    "type": "object",
    "properties": {
        "optimize": {
            "$ref": "#/$defs/term"
        }
    },
    "required": [
        "optimize"
    ]
}


